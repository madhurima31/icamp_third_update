<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/co_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Company"
        android:textColor="@color/grey"
        android:textSize="@dimen/large"
        android:textStyle="bold"
        android:padding="@dimen/bytes"
        android:gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/bytes">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_margin="@dimen/bytes"
                android:padding="@dimen/bytes"
                android:elevation="@dimen/elevation">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal Info"
                    android:textSize="@dimen/medium"
                    android:textStyle="bold"
                    android:padding="@dimen/nibbles"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/co_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_st_id"
                    android:hint="   ID"
                    android:padding="@dimen/nibbles"/>
                <TextView
                    android:id="@+id/co_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_st_gender"
                    android:hint="   Gender"
                    android:padding="@dimen/nibbles"/>
                <TextView
                    android:id="@+id/co_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_st_email"
                    android:hint="   Email"
                    android:padding="@dimen/nibbles"/>
                <TextView
                    android:id="@+id/co_stipend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_st_mobile"
                    android:hint="   Stipend"
                    android:padding="@dimen/nibbles"/>
                <TextView
                    android:id="@+id/co_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_st_email"
                    android:hint="   Email"
                    android:padding="@dimen/nibbles"/>
                <TextView
                    android:id="@+id/co_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_st_mobile"
                    android:hint="   Mobile"
                    android:padding="@dimen/nibbles"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                android:layout_margin="@dimen/bytes"
                android:padding="@dimen/bytes"
                android:elevation="@dimen/elevation">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Skills"
                    android:textSize="@dimen/medium"
                    android:textStyle="bold"
                    android:padding="@dimen/nibbles"
                    android:gravity="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Add Your Skills and Resume"
                    android:padding="@dimen/nibbles"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                android:layout_margin="@dimen/bytes"
                android:padding="@dimen/bytes"
                android:elevation="@dimen/elevation">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selected Students"
                    android:textSize="@dimen/medium"
                    android:textStyle="bold"
                    android:padding="@dimen/nibbles"
                    android:gravity="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Add Your Favourite Companies"
                    android:padding="@dimen/nibbles"/>
            </LinearLayout>

            <Button
                android:id="@+id/co_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
